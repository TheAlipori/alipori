---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../i18n/utils";
import { languages } from "../i18n/ui";
import HeroIcon from "../icons/HeroIcon.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatedPath = useTranslatedPath(lang);
---

<section class="relative px-4 py-12 md:py-0 md:px-10 overflow-hidden">
  <div
    class="flex flex-col md:flex-row justify-center items-center min-h-screen gap-8 md:gap-16 max-w-7xl mx-auto"
  >
    {/* Text Content */}
    <div class="text-center md:text-left md:w-1/2 z-10">
      <h1
        class="text-4xl md:text-6xl lg:text-5xl font-bold mb-4 md:mb-6 bg-clip-text text-transparent bg-gradient-to-r from-white to-purple-500 animate-gradient"
      >
        {t("title")}
      </h1>

      <p
        class="text-lg md:text-xl text-white/90 mb-6 md:mb-8 max-w-xl mx-auto md:mx-0"
      >
        {t("description")}
      </p>

      <div
        class="flex flex-col md:flex-row gap-4 justify-center md:justify-start"
      >
        <a
          href="https://wa.me/526183510239"
          class="inline-flex items-center justify-center space-x-2 bg-purple-600 hover:bg-purple-700 text-white py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-galaxy"
        >
          <span class="text-center">{t("button1")}</span>
        </a>

        <a
          href="#aboutme"
          class="inline-flex items-center justify-center border-2 border-purple-500 hover:border-purple-400 bg-transparent hover:bg-purple-500/10 text-white hover:text-purple-300 py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105"
        >
          <span class="text-center">{t("button2")}</span>
        </a>
      </div>
    </div>

    {/* Laptop SVG */}
    <div class="md:w-1/2 flex justify-center relative group">
      <div class="relative w-full max-w-2xl aspect-video">
        <img
          src="/HeroIcon.svg"
          alt="Laptop espacial"
          class="w-full h-auto animate-float"
        />
        {/* Ventana de la laptop - Puedes agregar una imagen o video aqu√≠ */}
      </div>
    </div>

    {/* Efectos estelares */}
    <div class="absolute inset-0 z-0">
      <div
        class="absolute w-1 h-1 bg-white rounded-full top-20 left-1/4 animate-twinkle"
      >
      </div>
      <div
        class="absolute w-1 h-1 bg-purple-800 rounded-full top-40 right-1/3 animate-twinkle-delay"
      >
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  @keyframes twinkle {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-twinkle {
    animation: twinkle 3s ease-in-out infinite;
  }

  .animate-twinkle-delay {
    animation: twinkle 4s ease-in-out 1s infinite;
  }

  .animate-gradient {
    background-size: 200% auto;
    animation: gradient-shift 5s ease infinite;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .shadow-galaxy {
    box-shadow: 0 0 30px rgba(104, 51, 235, 0.4);
  }
</style>
