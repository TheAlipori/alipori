---
import ReactIcon from "../icons/ReactIcon.astro";
import TailwinIcon from "../icons/tailwindIcon.astro";
import SanityIcon from "../icons/SanityIcon.astro";
import VercelIcon from "../icons/VercelIcon.astro";
import FigmaIcon from "../icons/FigmaIcon.astro";
import AdobeIcon from "../icons/AdobeIcon.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import JavaScriptIcon from "../icons/JavascriptIcon.astro";
import CssIcon from "../icons/cssIcon.astro";
import FlutterIcon from "../icons/FlutterIcon.astro";
import WordPressIcon from "../icons/WordpressIcon.astro";
---

<div class="max-w-3xl mx-auto px-5 mt-28">
  <div class="flex flex-col justify-center">
    <div class="text-center">
      <h2
        class="block w-full bg-gradient-to-b from-white to-gray-400 bg-clip-text font-medium text-transparent text-5xl md:text-6xl"
      >
        Skills
      </h2>

      <p class="max-w-md mx-auto text-white mt-6">
        What powers my designs and development
      </p>
    </div>

    <div
      class="flex flex-wrap items-center justify-center gap-10 mt-2 md:justify-around"
    >
      <div class="text-gray-400">
        <ReactIcon />
      </div>
      <div class="">
        <TailwinIcon />
      </div>

      <div class="">
        <SanityIcon />
      </div>

      <div class="">
        <VercelIcon />
      </div>
      <div class="">
        <FigmaIcon />
      </div>
      <div class="">
        <AdobeIcon />
      </div>
      <div class="">
        <AstroIcon />
      </div>
      <div>
        <JavaScriptIcon />
      </div>
      <div>
        <CssIcon />
      </div>
      <div>
        <FlutterIcon />
      </div>
      <div>
        <WordPressIcon />
      </div>
    </div>
  </div>
</div>
