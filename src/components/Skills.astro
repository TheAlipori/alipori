---
import ReactIcon from "../icons/ReactIcon.astro";
import TailwinIcon from "../icons/tailwindIcon.astro";
import SanityIcon from "../icons/SanityIcon.astro";
import VercelIcon from "../icons/VercelIcon.astro";
import FigmaIcon from "../icons/FigmaIcon.astro";
import AdobeIcon from "../icons/AdobeIcon.astro";
import AstroIcon from "../icons/AstroIcon.astro";
import JavaScriptIcon from "../icons/JavascriptIcon.astro";
import CssIcon from "../icons/cssIcon.astro";
import FlutterIcon from "../icons/FlutterIcon.astro";
import WordPressIcon from "../icons/WordpressIcon.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="max-w-5xl mx-auto px-5 mt-28">
  <!-- Aumenté a max-w-5xl -->
  <div class="flex flex-col justify-center gap-8">
    <!-- Agregué gap -->
    <div class="text-center">
      <h2
        class="block w-full bg-gradient-to-b from-white to-gray-400 bg-clip-text font-bold text-transparent text-4xl md:text-5xl"
      >
        Tech Stack
      </h2>
      <p class="max-w-lg mx-auto text-gray-300 mt-4 text-lg">
        <!-- Mejor contraste -->
        {t("tech2")}
      </p>
    </div>

    <div
      class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-8 place-items-center"
    >
      <!-- Grid responsivo -->
      <!-- Cada icono con hover y transición -->
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <ReactIcon class="w-12 h-12 text-[#61DAFB]" />
        <!-- Color brand -->
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <TailwinIcon class="w-12 h-12 text-[#38BDF8]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <SanityIcon class="w-12 h-12 text-[#F03E2F]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <VercelIcon class="w-12 h-12 text-white" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <FigmaIcon class="w-12 h-12 text-[#A259FF]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <AdobeIcon class="w-12 h-12 text-[#FF0000]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <AstroIcon class="w-12 h-12 text-white" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <JavaScriptIcon class="w-12 h-12 text-[#F7DF1E]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <CssIcon class="w-12 h-12 text-[#2965F1]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <FlutterIcon class="w-12 h-12 text-[#02569B]" />
      </div>
      <div class="p-4 hover:scale-110 transition-transform duration-300">
        <WordPressIcon class="w-12 h-12 text-[#21759B]" />
      </div>
    </div>
  </div>
</div>
