---
import ExperienceIcon from "../icons/experienceIcon.astro";
import ProjectsIcon from "../icons/projectIcon.astro";
import IdIcon from "../icons/idcardIcon.astro";
---

<section id="features" class="relative block px-6 py-10 md:py-20 md:px-10">
  <div class="relative mx-auto max-w-5xl text-center">
    <h2
      class="block w-full bg-gradient-to-b from-white to-gray-400 bg-clip-text font-medium text-transparent text-5xl md:text-6xl"
    >
      About me
    </h2>
    <p
      class="mx-auto my-4 w-full max-w-xl bg-transparent text-center font-medium leading-relaxed tracking-wide text-white"
    >
      A glimpse into my skills and achievements
    </p>
  </div>

  <div
    class="relative mx-auto max-w-7xl z-10 grid grid-cols-1 gap-10 pt-14 sm:grid-cols-2 lg:grid-cols-3"
  >
    <div
      class="rounded-md p-8 shadow text-center backdrop-blur-3xl place-items-center"
    >
      <ExperienceIcon class="size-24 fill-white" />
      <h3 class="mt-6 text-white text-5xl">+4</h3>
      <h class="text-center text-white"></h>
      <p class="my-4 mb-0 font-normal leading-relaxed tracking-wide text-white">
        years of experience
      </p>
    </div>

    <div
      class="rounded-md p-8 text-center shadow backdrop-blur-3xl place-items-center"
    >
      <ProjectsIcon class="size-24 fill-white" />
      <h3 class="mt-6 text-white text-5xl">+12</h3>
      <p class="my-4 mb-0 font-normal leading-relaxed tracking-wide text-white">
        Projects Completed
      </p>
    </div>

    <div
      class="rounded-md p-8 text-center shadow backdrop-blur-3xl place-items-center"
    >
      <IdIcon class="size-24 fill-white" />
      <h3 class="mt-6 text-white text-5xl">12341293</h3>

      <p class="my-4 mb-0 font-normal leading-relaxed tracking-wide text-white">
        Professional ID as an Engineer in Computer Systems with a specialization
        in Web Development
      </p>
    </div>
  </div>
</section>

