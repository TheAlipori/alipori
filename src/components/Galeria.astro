---
import "photoswipe/style.css";
---

<div class="relative mx-auto max-w-5xl text-center">
  <h2
    class="block w-full bg-gradient-to-b from-white to-gray-400 bg-clip-text font-medium text-transparent text-5xl md:text-6xl"
  >
    Some of My Work
  </h2>
  <p
    class="mx-auto my-4 w-full max-w-xl bg-transparent text-center font-medium leading-relaxed tracking-wide text-white"
  >
    A showcase of my dedication and skills
  </p>
</div>
<div
  class="grid grid-cols-1 md:grid-cols-3 w-2/3 md:max-w-6xl gap-6 mx-auto py-20"
  id="gallery"
>
  {
    Array.from({ length: 9 }).map((_, i) => (
      <a
        class="rounded-xl shadow-xl shadow-sky-300/10 hover:shadow-2xl hover:shadow-sky-300/75  overflow-hidden hover:scale-105 transition-transform"
        href={`/public/img-${i + 1}.png`}
        target="_blank"
        data-pswp-width="900"
        data-pswp-height="1400"
      >
        <img src={`/public/img-${i + 1}.png`} alt="" />
      </a>
    ))
  }
</div>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  const options = {
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  };
  const lightbox = new PhotoSwipeLightbox(options);
  lightbox.init();
</script>
