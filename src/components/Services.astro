---
import LandingIcon from "../icons/landingIcon.astro";
import CelIcon from "../icons/celIcon.astro";
import BrandIcon from "../icons/BrandIcon.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="services" class="scroll-mt-16">
  <div
    class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20 text-white"
  >
    <div
      class="text-center max-w-2xl mx-auto mb-16"
      data-aos="fade-down"
      data-aos-duration="1000"
      data-aos-easing="ease-out-cubic"
    >
      <p class="text-gray-300 text-lg">
        {t("services2")}
      </p>
      <h2
        class="bg-gradient-to-b from-white to-gray-400 bg-clip-text text-transparent text-4xl md:text-6xl font-bold mb-4"
      >
        {t("services1")}
      </h2>
    </div>

    <div
      class="grid gap-8 lg:grid-cols-3"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-easing="ease-out-cubic"
    >
      <!-- Website Development Card -->
      <div
        class="relative group rounded-xl p-8 bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 transition-all duration-300 shadow-xl flex flex-col"
      >
        <LandingIcon class="w-16 h-16 mb-6 fill-white/80" />
        <h3 class="text-2xl font-bold mb-4">{t("services3")}</h3>

        <div class="my-6">
          <span
            class="text-4xl font-bold bg-gradient-to-r from-white to-purple-300 bg-clip-text text-transparent"
            >{t("services4")}</span
          >
          <span class="text-gray-400">{t("services5")}</span>
        </div>

        <ul class="space-y-3 mb-8 text-gray-300">
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services6")}
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services7")}
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services8")}
          </li>
        </ul>

        <a
          href="#contact"
          class="inline-block w-full py-3 text-center font-medium bg-purple-800/50 hover:bg-purple-800 rounded-lg transition-colors mt-auto"
        >
          {t("services9")}
        </a>
      </div>

      <!-- UI/UX Design Card -->
      <div
        class="relative group rounded-xl p-8 bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 transition-all duration-300 shadow-xl flex flex-col"
      >
        <CelIcon class="w-16 h-16 mb-6 fill-white/80" />
        <h3 class="text-2xl font-bold mb-4">{t("services10")}</h3>

        <div class="my-6">
          <span
            class="text-4xl font-bold bg-gradient-to-r from-white to-purple-300 bg-clip-text text-transparent"
            >{t("services11")}</span
          >
          <span class="text-gray-400">{t("services12")}</span>
        </div>

        <ul class="space-y-3 mb-8 text-gray-300">
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services13")}
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services14")}
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services15")}
          </li>
        </ul>

        <a
          href="#contact"
          class="inline-block w-full py-3 text-center font-medium bg-purple-800/50 hover:bg-purple-800 rounded-lg transition-colors mt-auto"
        >
          {t("services16")}
        </a>
      </div>

      <!-- Branding Card -->
      <div
        class="relative group rounded-xl p-8 bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 transition-all duration-300 shadow-xl flex flex-col"
      >
        <BrandIcon class="w-16 h-16 mb-6 fill-white/80" />
        <h3 class="text-2xl font-bold mb-4">{t("services17")}</h3>

        <div class="my-6">
          <span
            class="text-4xl font-bold bg-gradient-to-r from-white to-purple-300 bg-clip-text text-transparent"
          >
            {t("services18")}
          </span>
          <span class="text-gray-400"> {t("services19")}</span>
        </div>

        <ul class="space-y-3 mb-8 text-gray-300">
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services20")}
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services21")}
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            {t("services22")}
          </li>
        </ul>

        <a
          href="#contact"
          class="inline-block w-full py-3 text-center font-medium bg-purple-800/50 hover:bg-purple-800 rounded-lg transition-colors mt-auto"
        >
          {t("services23")}
        </a>
      </div>
    </div>

    <div class="mt-16 text-center">
      <p class="text-gray-400">
        {t("services24")}

        <a
          href="#contact"
          class="text-purple-400 hover:text-purple-300 underline"
        >
          {t("services25")}</a
        >
      </p>
    </div>
  </div>
</section>
