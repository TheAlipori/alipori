---
import LandingIcon from "../icons/landingIcon.astro";
import CelIcon from "../icons/celIcon.astro";
import BrandIcon from "../icons/BrandIcon.astro";
---

<section id="services">
  <div
    class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20 text-white"
  >
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2
        class="bg-gradient-to-b from-white to-gray-400 bg-clip-text text-transparent text-4xl md:text-5xl font-bold mb-4"
      >
        Services & Pricing
      </h2>
      <p class="text-gray-300 text-lg">
        Transparent packages for every business need
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Website Development Card -->
      <div
        class="relative group rounded-xl p-8 bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 transition-all duration-300 shadow-xl"
      >
        <LandingIcon class="w-16 h-16 mb-6 fill-white/80" />
        <h3 class="text-2xl font-bold mb-4">Web Development</h3>

        <div class="my-6">
          <span
            class="text-4xl font-bold bg-gradient-to-r from-white to-purple-300 bg-clip-text text-transparent"
            >$195</span
          >
          <span class="text-gray-400">/one-time</span>
        </div>

        <ul class="space-y-3 mb-8 text-gray-300">
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Fully Responsive Design
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            SEO Optimized + Analytics
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Hosting & Domain Setup
          </li>
        </ul>

        <a
          href="#contact"
          class="inline-block w-full py-3 text-center font-medium bg-purple-800/50 hover:bg-purple-800 rounded-lg transition-colors"
        >
          Start Project →
        </a>
      </div>

      <!-- UI/UX Design Card -->
      <div
        class="relative group rounded-xl p-8 bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 transition-all duration-300 shadow-xl"
      >
        <CelIcon class="w-16 h-16 mb-6 fill-white/80" />
        <h3 class="text-2xl font-bold mb-4">UI/UX Design</h3>

        <div class="my-6">
          <span
            class="text-4xl font-bold bg-gradient-to-r from-white to-purple-300 bg-clip-text text-transparent"
            >$120</span
          >
          <span class="text-gray-400">/project</span>
        </div>

        <ul class="space-y-3 mb-8 text-gray-300">
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Interactive Prototypes
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            User Testing Included
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Design System Files
          </li>
        </ul>

        <a
          href="#contact"
          class="inline-block w-full py-3 text-center font-medium bg-purple-800/50 hover:bg-purple-800 rounded-lg transition-colors"
        >
          Get Designs →
        </a>
      </div>

      <!-- Branding Card -->
      <div
        class="relative group rounded-xl p-8 bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 transition-all duration-300 shadow-xl"
      >
        <BrandIcon class="w-16 h-16 mb-6 fill-white/80" />
        <h3 class="text-2xl font-bold mb-4">Branding</h3>

        <div class="my-6">
          <span
            class="text-4xl font-bold bg-gradient-to-r from-white to-purple-300 bg-clip-text text-transparent"
            >$240</span
          >
          <span class="text-gray-400">/package</span>
        </div>

        <ul class="space-y-3 mb-8 text-gray-300">
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Logo + Visual Identity
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Social Media Toolkit
          </li>
          <li class="flex items-center gap-3">
            <span class="text-purple-500 text-xl">✓</span>
            Brand Guidelines PDF
          </li>
        </ul>

        <a
          href="#contact"
          class="inline-block w-full py-3 text-center font-medium bg-purple-800/50 hover:bg-purple-800 rounded-lg transition-colors"
        >
          Build Brand →
        </a>
      </div>
    </div>

    <div class="mt-16 text-center">
      <p class="text-gray-400">
        Need custom solutions?
        <a
          href="#contact"
          class="text-purple-400 hover:text-purple-300 underline"
          >Let's discuss →</a
        >
      </p>
    </div>
  </div>
</section>
