---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Landing Pages Section -->
<section class="px-4 py-16 md:py-24 mx-auto max-w-7xl" ,id="projects">
  <div class="text-center mb-16">
    <h2
      class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent"
    >
      {t("projects1")}
    </h2>
    <p class="mt-4 text-gray-300 max-w-xl mx-auto">
      {t("projects2")}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Landing 1 -->
    <div
      class="group relative rounded-xl overflow-hidden hover:shadow-2xl transition-shadow"
    >
      <img
        src="/landingpagecafelibre.jpeg"
        alt="Proyecto 1"
        class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent p-6 flex flex-col justify-end"
      >
        <h3 class="text-xl font-bold text-white mb-2"></h3>
        <p class="text-gray-300 text-sm"></p>
        <a
          href="#"
          class="font-bold mt-3 inline-block text-purple-400 hover:text-purple-300 text-sm"
        >
          Aire Libre →
        </a>
      </div>
    </div>

    <!-- Landing 2 -->
    <div
      class="group relative rounded-xl overflow-hidden hover:shadow-2xl transition-shadow"
    >
      <img
        src="/copymaxlandingpage.png"
        alt="Proyecto 2"
        class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent p-6 flex flex-col justify-end"
      >
        <h3 class="text-xl font-bold text-white mb-2"></h3>
        <p class="text-gray-300 text-sm"></p>
        <a
          href="#"
          class="font-bold mt-3 inline-block text-purple-400 hover:text-purple-300 text-sm"
        >
          Copymax →
        </a>
      </div>
    </div>

    <!-- Landing 3 -->
    <div
      class="group relative rounded-xl overflow-hidden hover:shadow-2xl transition-shadow"
    >
      <img
        src="/landingpage.png"
        alt="Proyecto 3"
        class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent p-6 flex flex-col justify-end"
      >
        <h3 class="text-xl font-bold text-white mb-2"></h3>
        <p class="text-gray-300 text-sm"></p>
        <a
          href="#"
          class="font-bold mt-3 inline-block text-purple-400 hover:text-purple-300 text-sm"
        >
          FunPet
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Branding Section -->
<section class="px-4 py-16 md:py-24">
  <div class="mx-auto max-w-7xl">
    <div class="text-center mb-16">
      <h2
        class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-gray-400 bg-clip-text text-transparent"
      >
        {t("projects3")}
      </h2>
      <p class="mt-4 text-gray-300 max-w-xl mx-auto">
        {t("projects4")}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Branding 1 -->
      <div
        class="group relative rounded-xl overflow-hidden bg-gray-800/50 hover:shadow-2xl transition-shadow"
      >
        <img
          src="/rebranding-1.png"
          alt="Branding 1"
          class="w-full h-96 object-contain p-8 transform group-hover:scale-[1.02] transition-transform"
        />
        <div class="p-6 border-t border-white/10">
          <h3 class="text-xl font-bold text-white mb-2">Copymax</h3>
          <p class="text-gray-300 text-sm">
            {t("projects5")}
          </p>
        </div>
      </div>

      <!-- Branding 2 -->
      <div
        class="group relative rounded-xl overflow-hidden bg-gray-800/50 hover:shadow-2xl transition-shadow"
      >
        <img
          src="/airelibre.png"
          alt="Branding 2"
          class="w-full h-96 object-contain p-8 transform group-hover:scale-[1.02] transition-transform"
        />
        <div class="p-6 border-t border-white/10">
          <h3 class="text-xl font-bold text-white mb-2">Aire Libre</h3>
          <p class="text-gray-300 text-sm">{t("projects7")}</p>
        </div>
      </div>
    </div>
  </div>
</section>
